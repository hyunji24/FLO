<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/song_setting_ib"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/song_eq_ib"
        android:layout_width="35dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/song_setting_ib"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_eq_off"
        app:layout_constraintBottom_toBottomOf="@id/song_setting_ib"
        app:layout_constraintTop_toTopOf="@id/song_setting_ib"/>




    <ImageButton
        android:id="@+id/song_down_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/nugu_btn_down"
        app:layout_constraintBottom_toBottomOf="@+id/song_eq_ib"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/song_eq_ib"/>

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_more"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/song_down_ib"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라일락"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/song_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_title_tv"
        android:layout_marginTop="7dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/song_albumimg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_singer_tv"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"

        android:src="@drawable/img_album_exp2"
        />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/song_lyric1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나라는 꽃가루에"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_albumimg_iv"
        android:layout_marginTop="18dp"/>


    <TextView
        android:id="@+id/song_lyric2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="눈이 따끔해 아야"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/song_lyric1_tv" />

    <LinearLayout
        android:id="@+id/song_linearlayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/song_lyric2_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_my_like_off"
        android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/song_unlike_off_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_player_unlike_off"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

    <SeekBar
        android:id="@+id/song_seekbar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/song_linearlayout_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/song_play_linearlayout"/>

    <TextView
        android:id="@+id/song_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="@id/song_seekbar"
        app:layout_constraintTop_toBottomOf="@id/song_seekbar"/>

    <TextView
        android:id="@+id/song_end_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:21"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="@id/song_seekbar"
        app:layout_constraintTop_toBottomOf="@id/song_seekbar"/>

    <LinearLayout
        android:id="@+id/song_play_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/song_start_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/song_previous_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplayer_previous"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/song_miniplayer_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplayer_play"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/song_pause_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplay_mvpause"
            android:visibility="gone"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/song_next_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplayer_next"
            android:layout_marginEnd="10dp"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/song_repeat_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/nugu_btn_repeat_inactive"
        app:layout_constraintEnd_toStartOf="@id/song_play_linearlayout"
        app:layout_constraintTop_toTopOf="@id/song_play_linearlayout"
        app:layout_constraintBottom_toBottomOf="@+id/song_play_linearlayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/song_random_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/nugu_btn_random_inactive"
        app:layout_constraintStart_toEndOf="@id/song_play_linearlayout"
        app:layout_constraintTop_toTopOf="@id/song_play_linearlayout"
        app:layout_constraintBottom_toBottomOf="@+id/song_play_linearlayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/song_instagram_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/btn_actionbar_instagram"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/song_list_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/btn_player_go_list"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/song_related_iv"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/song_instagram_iv"
        app:layout_constraintEnd_toStartOf="@+id/song_list_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/btn_player_related"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/videofrag_sort_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:text="최신순"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@id/videofrag_arrowdown_iv"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/videofrag_arrowdown_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            app:layout_constraintEnd_toEndOf="@id/videofrag_album1_cardview"
            app:layout_constraintTop_toTopOf="@id/videofrag_sort_tv"
            app:layout_constraintBottom_toBottomOf="@id/videofrag_sort_tv"
           />


    <androidx.cardview.widget.CardView
        android:id="@+id/videofrag_album1_cardview"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videofrag_sort_tv">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="centerInside"
            android:src="@drawable/coin_mv" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/videofrag_album1_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[MV] Coin"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/videofrag_album1_cardview"
        app:layout_constraintStart_toStartOf="@id/videofrag_album1_cardview"/>

    <TextView
        android:id="@+id/videofrag_album1_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/videofrag_album1_title_tv"
        app:layout_constraintStart_toStartOf="@id/videofrag_album1_title_tv"
        android:text="아이유 (IU) | 2021.03.26"
        android:textSize="15sp"
        android:layout_marginTop="2dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/videofrag_album2_cardview"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videofrag_album1_artist_tv">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="centerInside"
            android:src="@drawable/coin_mv2" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/videofrag_album2_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[MV] Coin"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/videofrag_album2_cardview"
        app:layout_constraintStart_toStartOf="@id/videofrag_album2_cardview"/>

    <TextView
        android:id="@+id/videofrag_album2_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/videofrag_album2_title_tv"
        app:layout_constraintStart_toStartOf="@id/videofrag_album2_title_tv"
        android:text="아이유 (IU) | 2021.03.26"
        android:textSize="15sp"
        android:layout_marginTop="2dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/videofrag_album3_cardview"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videofrag_album2_artist_tv">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="centerInside"
            android:src="@drawable/coin_mv" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/videofrag_album3_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[MV] Coin"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/videofrag_album3_cardview"
        app:layout_constraintStart_toStartOf="@id/videofrag_album3_cardview"/>

    <TextView
        android:id="@+id/videofrag_album3_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/videofrag_album3_title_tv"
        app:layout_constraintStart_toStartOf="@id/videofrag_album3_title_tv"
        android:text="아이유 (IU) | 2021.03.26"
        android:textSize="15sp"
        android:layout_marginTop="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>